<% include ./partials/header %>
<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>Your Orders</h2>
        <table class="table table-striped table-hover">
            <tr class="table-secondary">
                <th>Name</th>
                <th>Room</th>
                <th>Food</th>
                <th>Quantity</th>
                <th>Comments</th>
                <th></th>
            </tr>
            <% orders.forEach(function(order) { %>
                <tr>
                    <td><%= order.name %></td>
                    <td><%= order.room %></td>
                    <td><%= order.food %></td>
                    <td><%= order.quantity %></td>
                    <td><%= order.comment %></td>
                    <td><a href="/order/<%= order._id %>">
                            <button class="btn btn-info">Update</button>
                        </a>
                        <a href="/order/delete/<%= order._id %>">
                            <button class="btn btn-danger">
                                Delete
                            </button>
                        </a></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>
<form method="POST">
    <div class="row">
        <div class="col-md-5 offset-md-1">
            <h2>Order</h2>
            <% foods.forEach(function(food) { %>
                <div class="card" style="margin-bottom: 20px;">
                    <div class="card-body">
                        <h5 class="card-title"><%= food.name %></h5>
                        <p class="card-text"><%= food.description %></p>
                        <div class="form-inline">
                            <label for="hamburger" style="margin-right: 10px;">Quantity</label>
                            <input id="hamburger" class="form-control" type="number" name="<%= food.name %>" placeholder="0">
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="col-md-5">
            <h3>Comments</h3>
            <textarea class="form-control" name="comment" rows="5"></textarea>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Order</button>
        </div>
    </div>
</form>
<% include ./partials/footer %>