<% if (orders.length !== 0) { %>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-striped table-hover">
                <tr class="table-secondary">
                    <th>Name</th>
                    <th>Room</th>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Comments</th>
                    <th></th>
                </tr>
                <% orders.forEach(function(order) { %>
                    <tr>
                        <td><%= order.customer %></td>
                        <td><%= order.room %></td>
                        <td>
                            <% order.foods.forEach((food) => { %>
                                <%= food.name %><br>
                            <% }) %>
                        </td>
                        <td>
                            <% order.foods.forEach((food) => { %>
                                <%= food.quantity %><br>
                            <% }) %>
                        </td>
                        <td><%= order.comment %></td>
                        <td><a href="/order/<%= order._id %>"><button class="btn btn-info">Update</button></a>
                            <a href="/order/<%= order._id %>/delete"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
<% } %>