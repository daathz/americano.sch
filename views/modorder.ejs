<% include ./partials/header %>
<form method="POST">
    <div class="row">
        <div class="col-md-5 offset-md-1">
            <h2>Order</h2>
            <% foods.forEach(function(food) { %>
                <div class="card" style="margin-bottom: 20px;">
                    <div class="card-body">
                        <h5 class="card-title"><%= food.name %></h5>
                        <p class="card-text"><%= food.description %></p>
                        <div class="form-inline">
                            <label for="<%= food.name %>" style="margin-right: 10px;">Quantity</label>
                            <input id="<%= food.name %>" class="form-control" type="number" name="<%= food.name %>" placeholder="0"
                                   <% order.foods.forEach((orderedFood) => { if (orderedFood.name === food.name) { %>
                                   value="<%= orderedFood.name === food.name ? orderedFood.quantity : 0 %>"
                                   <% }}) %>>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="col-md-5">
            <h3>Comments</h3>
            <textarea class="form-control" name="comment" rows="5"><%= order.comment %></textarea>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Update Order</button>
        </div>
    </div>
</form>
<% include ./partials/footer %>